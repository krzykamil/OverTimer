<% if flash[:alert] %>
<%= js add_gritter(flash[:alert], title: "Overtime App Notification", sticky: false, time: 3000) %>
<% elsif flash[:error] %>
<%= js add_gritter(flash[:error], title: "Overtime App Notification", sticky: false, time: 3000) %>
<% else %>
<%= js add_gritter(flash[:notice], title: "Overtime App Notification", sticky: false, time: 3000) %>
<% end %>
